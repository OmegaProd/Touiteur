<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{ path('home') }}">Touiteur</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('touites') }}">Touites</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('touites_create') }}">Poster un touite</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_signin') }}">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('user_index') }}">Profil</a>
							</li>
						</ul>
						<form class="d-flex">
							<input class="form-control me-sm-2" type="text" placeholder="Chercher">
							<button class="btn btn-secondary my-2 my-sm-0" type="submit">Chercher</button>
						</form>
					</div>
				</div>
			</nav>

			<div class="container"> {% block body %}{% endblock %}
				</div>
				{% block javascripts %}
					<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
					<script src="/js/script.js"></script>
				{% endblock %}
			</body>
		</html>
